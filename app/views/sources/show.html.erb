<div class="row">
  <div class="col-lg-12">
    <div class="pull-rightX">
      <%= form_for @source, method: 'delete', html: { style: 'display: inline' } do |f| %>
        <%= f.submit 'Delete', class: 'btn btn-xs btn-danger'  %>
      <% end %>
      &#183;
      <%= link_to 'Edit', edit_source_path(@source) %>
    </div>

    <h2>
      Source |
      <small>
	<%= @source.language %>
	<% if @source.context.present? %>
	  &#183; <%= @source.context %>
	<% end %>
      </small>
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <blockquote>
      <%= @source.text.html_safe %>
    </blockquote>

    <% if @source.context.present? %>
      <p>
	<strong>Context:</strong>
	<%= @source.context %>
      </p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h3>Translations <!--small>(<%= @source.translations.size %>)</small--></h3>
    <table class="table">
      <thead>
	<tr>
	  <th>Language</th>
	  <th colspan="2">Text</th>
	</tr>
      </thead>

      <tbody>
	<% @source.translations.each do |translation| %>
	  <tr id="<%= dom_id(translation) %>" class="translation">
	    <td><%= translation.language %></td>
	    <td><%= translation.text.html_safe %></td>
	    <td>
	      <%= link_to 'Delete', translation, remote: true, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %>
	    </td>
	  </tr>
	<% end %>
      </tbody>
    </table>
  </div>
</div>
