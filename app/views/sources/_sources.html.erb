<table class='table table-hover'>
  <thead>
    <tr>
      <th>Language</th>
      <th colspan="2">Text</th>
    </tr>
  </thead>

  <tbody>
    <% sources.each do |source| %>
      <tr>
	<td><%= source.language %></td>
	<td><%= source.text.html_safe %></td>
	<td align="right">
	  <%= link_to 'View', source %>
	  &#183;
	  <%= link_to 'Edit', edit_source_path(source), 'data-no-turbolink' => 'true' %>
	  &#183;
	  <%= link_to 'Delete', source, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate sources, renderer: BootstrapPagination::Rails %>
