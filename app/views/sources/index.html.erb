<h1>Listing Sources</h1>
<%= tinymce %>
<%= form_tag("/sources", method: "get") do %>
  <p>  
    <%= label_tag(:text, "Language") %>
    <%= select_tag :language , options_for_select(Source.supported_languages,
                                selected: params[:language] ||'en') %>
    <%= text_area_tag(:text, params[:text] ,placeholder: "Text to search", class: 'form-control') %>
  </p>  
  <p>  
    <%= submit_tag("Search") %> | <%= link_to 'reset search', root_path %>
  </p>
<% end %>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>id</th>
      <th>Language</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.id %></td>
        <td><%= source.language %></td>
        <td><%= source.text.html_safe %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source), 'data-no-turbolink' => 'true' %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New source', new_source_path %>
